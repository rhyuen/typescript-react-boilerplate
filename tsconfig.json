{
    "compilerOptions": {
        "jsx": "react",
        "outDir": "./dist/",
        "target": "es2015",
        "module": "commonjs",
        "moduleResolution": "node",
        "allowSyntheticDefaultImports": true,
        "noEmit": true,
        "strict": true,
        "sourceMap": true,
        "isolatedModules": false,
        "removeComments": true,
        "esModuleInterop": true,
        "noImplicitAny": true,
        "types": [
            "jest",
            "node"
        ]
    },
    "include": [
        "./frontend/src/**/*",
        "backend/functions/getCommentsForPost.ts"
    ],
    "exclude": [
        "/node_modules/",
        "/dist"
    ]
}